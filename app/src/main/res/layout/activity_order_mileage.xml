    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/title_bar"
        android:id="@+id/title"/>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_mileage1"
            android:textColor="@color/needcar_txt_color4"
            android:textSize="@dimen/sp_14"
            android:paddingTop="@dimen/dp_11"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edt_licheng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/order_mileage2"
                android:background="@null"
                android:inputType="number"
                android:layout_toLeftOf="@+id/tv_km"
                android:textColorHint="@color/needcar_txt_color1"
                android:textColor="@color/needcar_txt_color4"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_mileage4"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_6"
                android:textColor="@color/needcar_txt_color2"
                android:textSize="@dimen/sp_14"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_10"
                />
        </RelativeLayout>

