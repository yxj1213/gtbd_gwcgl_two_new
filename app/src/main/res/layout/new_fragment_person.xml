<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bg_color"
    android:id="@+id/my_all_bg"
    android:scrollbars="none">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/me_bg">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_me_bg"/>
        <RelativeLayout
            android:id="@+id/rel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingRight="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_16"
                android:src="@mipmap/icon_white_three"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me_title"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_10"
                android:paddingRight="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_16"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:id="@+id/img_xx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingRight="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_16"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_message"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_head"
            android:layout_below="@+id/rel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_head_bg"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_54"
                android:src="@mipmap/icon_head"
                android:layout_marginLeft="@dimen/dp_27"
                android:layout_marginTop="@dimen/dp_33"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:id="@+id/lin_right"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_16"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/work_item_txt_color"
                    android:textSize="@dimen/sp_22"
                    android:fontFamily="@string/PingFangSC_Semibold"
                    />
                <TextView
                    android:id="@+id/tv_qymc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/work_item_txt_color"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_4"
                    android:fontFamily="@string/PingFangSC_Regular"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_gray_bg_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingBottom="@dimen/dp_1"
                    android:paddingRight="@dimen/dp_10"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_12"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/me_zhuangtai"
                        android:textColor="@color/needcar_txt_color4"
                        android:textSize="@dimen/sp_12"
                        android:fontFamily="@string/PingFangSC_Regular"
                        />
                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:src="@mipmap/icon_add"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/dp_2"/>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/lin_right_person"
                android:layout_toRightOf="@+id/lin_right"
                android:layout_marginLeft="@dimen/dp_23"
                android:paddingRight="@dimen/dp_23"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_right_persondetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_9"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingBottom="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_43"
                    android:fontFamily="@string/PingFangSC_Regular"
                    android:textColor="@color/app_main_colors"
                    android:background="@drawable/border_blue_bg_10"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>


        </RelativeLayout>
        <LinearLayout
           android:layout_below="@+id/rel_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_wddd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/me_txt1"
                android:paddingLeft="@dimen/dp_17"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_14"
                android:drawableLeft="@mipmap/icon_me_1"
                android:drawablePadding="@dimen/dp_11"
                android:textColor="@color/work_item_txt_color"
                android:textSize="@dimen/sp_14"
                android:fontFamily="@string/PingFangSC_Regular"
                />
            <View
                style="@style/view_top_bottom10"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"/>
            <TextView
                android:id="@+id/tv_wdqb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/me_txt2"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:drawableLeft="@mipmap/icon_me_2"
                android:drawablePadding="@dimen/dp_10"
                android:textColor="@color/work_item_txt_color"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                android:fontFamily="@string/PingFangSC_Regular"
                />
            <View
                style="@style/view_top_bottom10"
                android:layout_marginLeft="@dimen/dp_16"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_16"/>
            <TextView
                android:id="@+id/tv_clgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/me_txt3"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_14"
                android:visibility="gone"
                android:paddingBottom="@dimen/dp_15"
                android:drawableLeft="@mipmap/icon_me_3"
                android:drawablePadding="@dimen/dp_9"
                android:textColor="@color/work_item_txt_color"
                android:textSize="@dimen/sp_14"
                android:fontFamily="@string/PingFangSC_Regular"
                />
            <View
                style="@style/view_top_bottom10"
                android:layout_marginLeft="@dimen/dp_16"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_16"/>
            <TextView
                android:id="@+id/tv_zjgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/me_txt4"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:visibility="gone"
                android:paddingBottom="@dimen/dp_15"
                android:drawableLeft="@mipmap/icon_me_4"
                android:drawablePadding="@dimen/dp_9"
                android:fontFamily="@string/PingFangSC_Regular"
                android:textColor="@color/work_item_txt_color"
                android:textSize="@dimen/sp_14"
                />
            <View
                style="@style/view_top_bottom10"
                android:layout_marginLeft="@dimen/dp_16"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_16"/>
            <TextView
                android:id="@+id/tv_tjyq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/me_txt5"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:visibility="gone"
                android:drawableLeft="@mipmap/icon_me_5"
                android:drawablePadding="@dimen/dp_10"
                android:textColor="@color/work_item_txt_color"
                android:textSize="@dimen/sp_14"
                android:fontFamily="@string/PingFangSC_Regular"
                />
            <View
                style="@style/view_top_bottom10"
                android:layout_marginLeft="@dimen/dp_16"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_16"/>
            <TextView
                android:id="@+id/tv_wdyy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/me_txt6"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_13"
                android:drawableLeft="@mipmap/icon_me_6"
                android:drawablePadding="@dimen/dp_9"
                android:textColor="@color/work_item_txt_color"
                android:textSize="@dimen/sp_14"
                android:fontFamily="@string/PingFangSC_Regular"
                />

            <View
                style="@style/view_top_bottom10"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"/>
            <TextView
                android:id="@+id/tv_sz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/me_txt7"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_11"
                android:drawableLeft="@mipmap/icon_me_7"
                android:drawablePadding="@dimen/dp_9"
                android:textColor="@color/work_item_txt_color"
                android:textSize="@dimen/sp_14"
                android:fontFamily="@string/PingFangSC_Regular"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</ScrollView>