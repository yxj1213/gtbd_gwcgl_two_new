<?xml version="1.0" encoding="utf-8"?>
<com.ttce.vehiclemanage.widget.MyLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_down" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@mipmap/icon_close" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:background="@drawable/white_l_r_16_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_24"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_6"/>

            <TextView
                android:id="@+id/state_speed"
                android:layout_toRightOf="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@drawable/d8f2_9"
                android:paddingBottom="@dimen/dp_4"
                android:paddingTop="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColor="@color/app_main_colors"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_9"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_route"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="方向："
        android:textColor="@color/color_24"
        android:paddingRight="@dimen/dp_9"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/tv_acc"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="ACC:"
        android:textColor="@color/color_24"
        android:textSize="12sp"/>

</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_9"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_rlc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_9"
                    android:text="日里程："
                    android:textColor="@color/color_24"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_ylc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="月里程:"
                    android:textColor="@color/color_24"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_yl_sy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_9"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_yl"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/dp_9"
                    android:layout_height="wrap_content"
                    android:text="油量:"
                    android:textColor="@color/color_24"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_yl_sy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/dp_9"
                    android:layout_height="wrap_content"
                    android:text="剩余:"
                    android:textColor="@color/color_24"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_wd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_9"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_wd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="温度:"
                    android:textColor="@color/color_24"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_xh"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icon_gps_time"
                        android:drawablePadding="8dp"
                        android:textColor="@color/color_24"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_wx"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icon_service_time"
                        android:drawablePadding="8dp"
                        android:textColor="@color/color_24"
                        android:textSize="12sp"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_show_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_location"
                android:drawablePadding="@dimen/dp_8"
                android:textColor="@color/color_24"
                android:textSize="@dimen/sp_12"
                android:layout_marginBottom="@dimen/dp_8"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看位置"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingLeft="@dimen/dp_26"
                    android:paddingRight="@dimen/dp_26"
                    android:background="@drawable/border_blue0_5_bg_20"
                    android:textColor="@color/app_main_colors"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textSize="12sp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_zz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="追踪"
                    android:background="@drawable/blue_22_bg"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingLeft="@dimen/dp_36"
                    android:layout_toRightOf="@+id/tv_address"
                    android:paddingRight="@dimen/dp_36"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_gj"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/tv_zz"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/blue_22_bg"
                    android:layout_height="wrap_content"
                    android:text="轨迹"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingLeft="@dimen/dp_36"
                    android:paddingRight="@dimen/dp_36"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/cutline"
                style="@style/cuteline"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cutline"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_zhiling"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon_zhilin"
                        android:gravity="center"
                        android:text="指令"
                        android:textColor="@color/common_black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_gaojing"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon_gaojing"
                        android:gravity="center"
                        android:text="告警"
                        android:textColor="@color/common_black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_weilan"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon_weilan_white"
                        android:gravity="center"
                        android:text="围栏"
                        android:textColor="@color/common_black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_daohang"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon_daohang"
                        android:gravity="center"
                        android:text="导航"
                        android:textColor="@color/common_black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_detail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon_xiangqing"
                        android:gravity="center"
                        android:text="详情"
                        android:textColor="@color/common_black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_share"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/icon_xc_share"
                        android:gravity="center"
                        android:text="共享"
                        android:textColor="@color/common_black"
                        android:visibility="visible"
                        android:textSize="12sp" />

                </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</com.ttce.vehiclemanage.widget.MyLayout>
