<?xml version="1.0" encoding="utf-8"?>
    <com.ttce.vehiclemanage.widget.linearlayout.ShadowLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_alignParentBottom="true"
        app:shadowRadius="@dimen/dp_12"
        app:shadowColor="@color/a1_color"
        app:bgColor="@color/white"
        app:xOffset="@dimen/dp_0"
        app:yOffset="@dimen/dp_2"
        app:blurRadius="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_16"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/work_item_txt_color"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                android:fontFamily="@string/PingFang_SC_Medium"
                />

            <TextView
                android:id="@+id/stateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:fontFamily="@string/PingFang_SC_Medium"
                android:background="@drawable/pcz_11"
                android:textColor="@color/app_main_colors"
                android:paddingTop="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_9"
                android:paddingBottom="@dimen/dp_2"
                android:paddingRight="@dimen/dp_9"
                android:textSize="@dimen/sp_12"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/lin_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_tel"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_height="wrap_content"
                android:text="@string/ditu3"
                android:textColor="@color/needcar_txt_color4"
                android:textSize="@dimen/sp_12"
                android:fontFamily="@string/PingFangSC_Regular"
                />
            <TextView
                android:id="@+id/telTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:textColor="@color/work_item_txt_color"
                android:fontFamily="@string/PingFangSC_Regular"
                android:textSize="@dimen/sp_12"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_idcard"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_height="wrap_content"
                android:text="@string/need_car_1_2_1"
                android:textColor="@color/needcar_txt_color4"
                android:textSize="@dimen/sp_12"
                android:fontFamily="@string/PingFangSC_Regular"
                />
            <TextView
                android:id="@+id/idCardTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:textColor="@color/work_item_txt_color"
                android:textSize="@dimen/sp_12"
                android:fontFamily="@string/PingFangSC_Regular"
                />

        </LinearLayout>
        <View
            style="@style/view_top_bottom10"
            android:layout_marginTop="@dimen/dp_12"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/timeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/PingFangSC_Regular"
                android:textColor="@color/needcar_txt_color1"
                android:textSize="@dimen/sp_12"
                />
        </RelativeLayout>
    </LinearLayout>

    </com.ttce.vehiclemanage.widget.linearlayout.ShadowLayout>
