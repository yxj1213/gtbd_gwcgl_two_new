<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_l_r_16_bg">
        <TextView
            android:id="@+id/tv_avatar_photograph"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/work_item_txt_color"
            android:text="选择拍照"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            style="@style/view_top_bottom10"/>

        <TextView
            android:id="@+id/tv_avatar_photo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/work_item_txt_color"
            android:text="从相册选择"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            style="@style/view_top_bottom10"/>

        <TextView
            android:id="@+id/tv_avatar_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/work_item_txt_color"
            android:text="恢复默认头像"/>
        <View
            style="@style/view_top_bottom10"
            android:layout_marginLeft="@dimen/dp_0"
            android:layout_marginRight="@dimen/dp_0"
            android:layout_marginBottom="@dimen/dp_0"
            android:layout_height="@dimen/dp_8"/>
        <TextView
            android:id="@+id/tv_qx"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/work_item_txt_color"
            android:text="@string/needcar3_time_txt7"/>

    </LinearLayout>

</RelativeLayout>