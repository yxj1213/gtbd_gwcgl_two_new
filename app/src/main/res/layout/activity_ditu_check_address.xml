<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_bar" android:id="@+id/title" />
<LinearLayout
        android:id="@+id/lin_search"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_12"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/work_item_txt_color"
                android:textSize="@dimen/sp_14"
                android:drawableRight="@mipmap/icon_black_bottom"
                android:drawablePadding="@dimen/dp_3"
                android:text="太原"
                android:textStyle="bold"
            android:fontFamily="@string/PingFang_SC_Medium"
                />
            <AutoCompleteTextView
                android:id="@+id/edt_address"
                android:background="@drawable/gray_6_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_22"
                android:textSize="@dimen/sp_14"
                android:hint="@string/ditu5"
                android:fontFamily="@string/PingFangSC_Regular"
                android:paddingTop="@dimen/dp_11"
                android:paddingLeft="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_13"
                android:paddingRight="@dimen/dp_12"
                android:textColorHint="@color/hint_txt_color"
                android:textColor="@color/work_item_txt_color"
                android:imeOptions="actionSearch"
                android:singleLine="true"/>
        </LinearLayout>
        <View
           style="@style/view_top_bottom10"
            android:layout_marginTop="@dimen/dp_12"/>
    </LinearLayout>


<LinearLayout
        android:id="@+id/lin_ddxz"
        android:layout_below="@+id/lin_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_dtxz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ditu6"
                android:textColor="@color/app_main_colors"
                android:textSize="@dimen/sp_14"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_12"
                android:drawablePadding="@dimen/dp_4"
                android:fontFamily="@string/PingFangSC_Regular"
                android:drawableLeft="@mipmap/icon_ddxz"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_address_book"
                android:layout_width="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_12"
                android:layout_height="wrap_content"
                android:text="@string/ditu7"
                android:visibility="gone"
                android:textColor="@color/app_main_colors"
                android:textSize="@dimen/sp_14"
                android:drawablePadding="@dimen/dp_4"
                android:fontFamily="@string/PingFangSC_Regular"
                android:drawableLeft="@mipmap/icon_dzb"
                />
        </LinearLayout>
    </LinearLayout>
<RelativeLayout
    android:layout_below="@+id/lin_ddxz"
    android:layout_width="match_parent"
    android:layout_above="@+id/lin_bottom"
    android:layout_height="wrap_content">
    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints">
    </com.baidu.mapapi.map.MapView>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/water_drop"/>
</RelativeLayout>
<LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_marginTop="-20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_l_r_16_bg">
        <TextView
            android:id="@+id/txt_address1"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:text="@string/needcar2_tjd_txt1"
            android:fontFamily="@string/PingFang_SC_Medium"
            android:textStyle="bold"
            android:textColor="@color/work_item_txt_color"
            android:textSize="@dimen/sp_16"
            />
        <TextView
            android:id="@+id/txt_address2"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ditu1"
            android:fontFamily="@string/PingFangSC_Regular"
            android:textColor="@color/needcar_txt_color1"
            android:textSize="@dimen/sp_12"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/gray_6_bg"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_dzpz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:hint="@string/ditu2"
                    android:paddingTop="@dimen/dp_11"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_13"
                    android:fontFamily="@string/PingFangSC_Regular"
                    android:paddingRight="@dimen/dp_12"
                    android:textColorHint="@color/hint_txt_color"
                    android:textColor="@color/work_item_txt_color"
                    android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/gray_6_bg"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_xm"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:hint="@string/needcar4_txt6"
                android:paddingTop="@dimen/dp_11"
                android:paddingLeft="@dimen/dp_12"
                android:fontFamily="@string/PingFangSC_Regular"
                android:paddingBottom="@dimen/dp_13"
                android:paddingRight="@dimen/dp_12"
                android:textColorHint="@color/hint_txt_color"
                android:textColor="@color/work_item_txt_color"
                android:background="@null"/>
            <View
                style="@style/view_top_bottom10"
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"/>
            <EditText
                android:id="@+id/edt_lxdh"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:hint="@string/ditu3"
                android:paddingTop="@dimen/dp_11"
                android:paddingLeft="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_13"
                android:paddingRight="@dimen/dp_12"
                android:fontFamily="@string/PingFangSC_Regular"
                android:inputType="number"
                android:maxLength="11"
                android:textColorHint="@color/hint_txt_color"
                android:textColor="@color/work_item_txt_color"
                android:background="@null"/>
        </LinearLayout>
        <CheckBox
            android:id="@+id/rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:paddingLeft="@dimen/dp_6"
            android:button="@drawable/rb"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_16"
            android:visibility="gone"
            android:fontFamily="@string/PingFangSC_Regular"
            android:textColor="@color/needcar_txt_color4"
            android:textSize="@dimen/sp_14"/>
        <View
            style="@style/view_top_bottom10"
            android:layout_marginTop="@dimen/dp_15"/>
        <TextView
            android:text="保存"
            android:id="@+id/tv_sub"
           style="@style/btn_blue_22"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:fontFamily="@string/PingFangSC_Regular"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/real"
        android:layout_width="match_parent"
        android:layout_below="@+id/lin_search"
        android:visibility="gone"
        android:clickable="true"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_100"
            android:background="@color/white"
            />
        <View
            android:id="@+id/views"
            android:layout_below="@+id/list_view"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_33"/>
    </RelativeLayout>

</RelativeLayout>