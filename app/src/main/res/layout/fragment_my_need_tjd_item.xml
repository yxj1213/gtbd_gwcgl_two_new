<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_7"
    android:layout_marginBottom="@dimen/dp_7"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_1"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_width="@dimen/dp_17"
        android:layout_height="@dimen/dp_17"
        android:text="@string/needcar2_tjd_txt"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/blue_yuan"
        android:textSize="@dimen/sp_10"
        android:layout_centerVertical="true"
        />
    <AutoCompleteTextView
        android:id="@+id/edt_1"
        android:layout_toRightOf="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:hint="@string/needcar2_tjd_txt3"
        android:textColorHint="@color/hint_txt_color"
        android:textColor="@color/work_item_txt_color"
        android:background="@drawable/gray_6_bg"
        android:layout_toLeftOf="@+id/img_del"
        android:drawableRight="@mipmap/icon_drag"
        android:fontFamily="@string/PingFangSC_Regular"
        android:paddingRight="@dimen/dp_10"
        android:drawablePadding="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_14"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp_16"/>
    <ImageView
        android:id="@+id/img_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_14"
        android:paddingTop="@dimen/dp_20"
        android:visibility="invisible"
        android:paddingBottom="@dimen/dp_19"
        android:src="@mipmap/icon_del"/>
</RelativeLayout>