<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_34"
    android:paddingRight="@dimen/dp_34"
    android:orientation="vertical"
    android:id="@+id/fra"
    android:background="@mipmap/icon_order_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/needcar_dialog_bg1"
            android:textColor="@color/color_24"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_52"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/needcar_dialog_txt1"
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_13"
            />
        <LinearLayout
            android:id="@+id/lin_no_createbusiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/needcar_dialog_item_bg"
            android:paddingRight="@dimen/dp_12"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_12">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_order_createbusiness"
                android:paddingLeft="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_23"
                android:paddingRight="@dimen/dp_12"
                android:paddingTop="@dimen/dp_17"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_qy_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/needcar_dialog_txt1_3"
                    android:textColor="@color/work_item_txt_color"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/needcar_dialog_txt1_4"
                    android:textColor="@color/color_66"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_12"
                    android:fontFamily="@string/PingFangSC_Regular"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_no_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/needcar_dialog_item_bg"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_22">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_order_person"
                android:paddingLeft="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_23"
                android:paddingRight="@dimen/dp_12"
                android:paddingTop="@dimen/dp_17"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingRight="@dimen/dp_12"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/needcar_dialog_txt1_1"
                    android:textColor="@color/work_item_txt_color"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/needcar_dialog_txt1_2"
                    android:textColor="@color/color_66"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_12"
                    android:fontFamily="@string/PingFangSC_Regular"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_30"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_dismiss"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/needcar_dialog_txt1_5"
            android:textColor="@color/color_a5"
            android:textSize="@dimen/sp_14"
   android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_11"
            android:paddingBottom="@dimen/dp_11"
            android:fontFamily="@string/PingFang_SC_Medium"
            />
        <com.ttce.vehiclemanage.widget.linearlayout.ShadowLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tv_bottom"
            app:shadowRadius="@dimen/dp_22"
            app:shadowColor="@color/a6166_color"
            android:layout_alignParentBottom="true"
            app:xOffset="@dimen/dp_0"
            app:yOffset="@dimen/dp_2"
            app:blurRadius="@dimen/dp_6"
            app:bgColor="@color/app_main_colors"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_11"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:text="@string/needcar_dialog_txt1_6"
                android:fontFamily="@string/PingFang_SC_Medium"
                android:textStyle="bold"
                />
        </com.ttce.vehiclemanage.widget.linearlayout.ShadowLayout>
    </LinearLayout>

</FrameLayout>