<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/bg_color"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_title"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:background="@drawable/titlebar"
        android:textColor="@color/white"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"/>

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"/>


    <RelativeLayout
        android:id="@+id/rel_daiban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_work_bg"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-04-21"
            android:textColor="@color/e67"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_14"
            />
        <LinearLayout
            android:layout_below="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_21"
            android:layout_marginLeft="@dimen/dp_18"
            >
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/e67"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_3"
                android:textColor="@color/e67"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/dp_10"
                />
        </LinearLayout>

    </RelativeLayout>
  <com.ttce.vehiclemanage.widget.linearlayout.ShadowLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shadowRadius="@dimen/dp_12"
                app:shadowColor="@color/color_d4"
                app:bgColor="@color/white"
                app:xOffset="@dimen/dp_0"
                app:yOffset="@dimen/dp_2"
                app:blurRadius="@dimen/dp_6"
      android:id="@+id/shadowLayout_bottom"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_21"
                android:orientation="vertical">
      <LinearLayout
          android:id="@+id/lin_thisday"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="@dimen/dp_16">
          <TextView
              android:id="@+id/tv_thisday"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="今日订单"
              android:textColor="@color/work_item_txt_color"
              android:textSize="@dimen/sp_16"
              android:drawablePadding="@dimen/dp_2"
              android:drawableRight="@mipmap/icon_black_bottom"
              />
      </LinearLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="@dimen/dp_8"
          android:layout_marginLeft="@dimen/dp_13"
          android:layout_marginRight="@dimen/dp_13"
          android:orientation="horizontal">
          <LinearLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@mipmap/dd_all_bg"
              android:paddingLeft="@dimen/dp_21"
              android:orientation="vertical">
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/dp_12"
                      android:src="@mipmap/dd_all"/>
                  <TextView
                      android:id="@+id/tv_num_all"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="0"
                      android:layout_marginTop="@dimen/dp_9"
                      android:textSize="@dimen/sp_22"
                      android:textColor="@color/a1a1_color"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="订单总量"
                      android:textColor="@color/color_6A"
                      android:textSize="@dimen/sp_12"
                      />
          </LinearLayout>
          <LinearLayout
              android:layout_alignParentRight="true"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/dp_21"
              android:background="@mipmap/dd_pcz_bg"
              android:orientation="vertical">
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/dp_12"
                      android:src="@mipmap/dd_pcz"/>
                  <TextView
                      android:id="@+id/tv_num_pcz"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="0"
                      android:layout_marginTop="@dimen/dp_9"
                      android:textSize="@dimen/sp_22"
                      android:textColor="@color/color_0bc"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="派车中订单"
                      android:textColor="@color/color_6A"
                      android:textSize="@dimen/sp_12"
                      />
          </LinearLayout>
      </RelativeLayout>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="@dimen/dp_21"
          android:layout_marginLeft="@dimen/dp_13"
          android:layout_marginRight="@dimen/dp_13"
          android:orientation="horizontal">
          <LinearLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@mipmap/dd_cxz_bg"
              android:paddingLeft="@dimen/dp_21"
              android:orientation="vertical">
              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dp_12"
                  android:src="@mipmap/dd_cxz"/>
              <TextView
                  android:id="@+id/tv_num_cxz"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0"
                  android:layout_marginTop="@dimen/dp_9"
                  android:textSize="@dimen/sp_22"
                  android:textColor="@color/a1a1_color"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="出行中订单"
                  android:textColor="@color/color_6A"
                  android:textSize="@dimen/sp_12"
                  />
          </LinearLayout>
          <LinearLayout
              android:layout_alignParentRight="true"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/dp_21"
              android:background="@mipmap/dd_finish_bg"
              android:orientation="vertical">
              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dp_12"
                  android:src="@mipmap/dd_finish"/>
              <TextView
                  android:id="@+id/tv_num_finish"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0"
                  android:layout_marginTop="@dimen/dp_9"
                  android:textSize="@dimen/sp_22"
                  android:textColor="@color/color_0bc"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="已完成订单"
                  android:textColor="@color/color_6A"
                  android:textSize="@dimen/sp_12"
                  />
          </LinearLayout>
      </RelativeLayout>
    </com.ttce.vehiclemanage.widget.linearlayout.ShadowLayout>
<include layout="@layout/yinying_bootom"
    android:visibility="gone"/>

</LinearLayout>