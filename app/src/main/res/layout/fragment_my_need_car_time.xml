<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_l_r_16_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/needcar3_time_txt"
                android:padding="@dimen/dp_16"
                android:textStyle="bold"
                android:textColor="@color/work_item_txt_color"
                android:fontFamily="@string/PingFang_SC_Medium"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/tv_wc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/needcar3_time_txt6"
                android:padding="@dimen/dp_16"
                android:fontFamily="@string/PingFangSC_Regular"
                android:textColor="@color/app_main_colors"
                android:textSize="@dimen/sp_14"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/lin_ycsj"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_16"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_xzyc"
                    style="@style/btn_blue_15"
                    android:fontFamily="@string/PingFangSC_Regular"
                    android:text="@string/needcar3_txt2"/>
                <TextView
                    android:id="@+id/tv_yyyc"
                    style="@style/btn_gray_15"
                    android:text="@string/needcar3_time_txt2"
                    android:fontFamily="@string/PingFangSC_Regular"
                    android:layout_marginLeft="@dimen/dp_16"/>
            </LinearLayout>
            <LinearLayout
                android:paddingRight="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_36"
                android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_ksyc"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    style="@style/btn_border_gray_4"
                    android:hint="@string/needcar3_time_txt3"
                    android:gravity="left"
                    android:fontFamily="@string/PingFangSC_Regular"
                    android:drawableRight="@mipmap/icon_bottom_gray"/>
                    <ImageView
                        android:id="@+id/img_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_del_bg"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:layout_gravity="right|center_vertical"
                        android:paddingRight="@dimen/dp_30"/>
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/needcar3_time_txt5"
                    android:fontFamily="@string/PingFangSC_Regular"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    />
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_jsyc"
                        style="@style/btn_border_gray_4"
                        android:hint="@string/needcar3_time_txt4"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@string/PingFangSC_Regular"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/icon_bottom_gray"
                        android:gravity="left"/>
                    <ImageView
                        android:id="@+id/img_close2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_del_bg"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:layout_gravity="right|center_vertical"
                        android:paddingRight="@dimen/dp_30"/>
                </FrameLayout>

            </LinearLayout>
            <View
                style="@style/view_top_bottom10"
                android:layout_marginLeft="@dimen/dp_0"
                android:layout_marginRight="@dimen/dp_0"
                android:layout_marginBottom="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="@dimen/dp_8"/>
        </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_yclx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <ListView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/dp_2"
            android:divider="@null"
            android:layout_height="wrap_content"/>
        <View
            style="@style/view_top_bottom10"
            android:layout_marginLeft="@dimen/dp_0"
            android:layout_marginRight="@dimen/dp_0"
            android:layout_marginBottom="@dimen/dp_0"
            android:layout_height="@dimen/dp_8"/>
    </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lin_ryxx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/border_e6_bg_4"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_14"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/needcar4_ryxx_txt1"
                    android:textColor="@color/needcar_txt_color1"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_9"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:fontFamily="@string/PingFangSC_Regular"
                    android:textSize="@dimen/sp_12"
                    />
                <EditText
                    android:id="@+id/edt_xm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/needcar_txt_color1"
                    android:textSize="@dimen/sp_12"
                    android:background="@null"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/border_e6_bg_4"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_32"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/needcar4_ryxx_txt2"
                    android:textColor="@color/needcar_txt_color1"
                    android:textSize="@dimen/sp_12"
                    android:paddingLeft="@dimen/dp_10"

                    android:paddingTop="@dimen/dp_9"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:fontFamily="@string/PingFangSC_Regular"
                    />
                <EditText
                    android:id="@+id/edt_dh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/needcar_txt_color1"
                    android:textSize="@dimen/sp_12"
                    android:background="@null"/>
            </LinearLayout>
            <View
                style="@style/view_top_bottom10"
                android:layout_marginLeft="@dimen/dp_0"
                android:layout_marginRight="@dimen/dp_0"
                android:layout_marginBottom="@dimen/dp_0"
                android:layout_height="@dimen/dp_8"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_qx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/gray_bg_qx"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:fontFamily="@string/PingFangSC_Regular"
            android:text="@string/needcar3_time_txt7"/>
    </LinearLayout>
</RelativeLayout>