<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:orientation="vertical"
    android:padding="16dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/lock_type"
            android:layout_margin="6dp"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:text="新能源"
            android:button="@null"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:drawableTop="@mipmap/select_add"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:background="@drawable/gray_6_bg"
            android:textColor="@color/work_item_txt_color"
            android:textSize="10sp"/>

        <com.parkingwang.keyboard.view.InputView
            android:id="@+id/input_view"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_toLeftOf="@+id/lock_type"
            android:layout_margin="6dp"
            style="@style/PWKInputViewStyle"
            app:pwkInputTextSize="22sp"/>

    </RelativeLayout>


    <Button
        android:id="@+id/ok"
        style="@style/btn_blue_22"
        android:layout_height="wrap_content"
        android:text="确定"/>

</LinearLayout>
