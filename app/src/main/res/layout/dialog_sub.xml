<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_dialog_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_12_bg"
    android:gravity="center"
    android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="@string/dialog_ts"
            android:textStyle="bold"
            android:textColor="@color/work_item_txt_color"
            android:fontFamily="@string/PingFang_SC_Medium"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_ts1"
            android:fontFamily="@string/PingFangSC_Regular"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_12"
            android:textColor="@color/needcar_txt_color4"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/dp_17"/>
    <EditText
        android:id="@+id/edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_18"
        android:hint="输入标题"
        android:fontFamily="@string/PingFangSC_Regular"
        android:textColorHint="@color/needcar_txt_color1"
        android:textColor="@color/needcar_txt_color1"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_9"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        android:background="@drawable/border_e6_bg_4"/>

<RelativeLayout
    android:id="@+id/rel_bhyy"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110"
    android:layout_marginLeft="@dimen/dp_18"
    android:layout_marginRight="@dimen/dp_18"
    android:visibility="gone"
    android:layout_marginBottom="@dimen/dp_18">
    <EditText
        android:id="@+id/edt_bh"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:hint="输入驳回原因..."
        android:textColorHint="@color/needcar_txt_color1"
        android:textColor="@color/needcar_txt_color1"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_9"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20"
        android:textSize="@dimen/sp_12"
        android:fontFamily="@string/PingFangSC_Regular"
        android:gravity="top"
        android:background="@drawable/border_e6_bg_4"
        android:maxLength="100"
       />
    <TextView
        android:id="@+id/txt_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/100字"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/needcar_txt_color1"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_8"
        android:fontFamily="@string/PingFangSC_Regular"
        android:textSize="@dimen/sp_12"
        />
</RelativeLayout>
    <View
        style="@style/view_top_bottom10"
        android:background="#1a000000"
        android:layout_height="@dimen/dp_1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:text="@string/dialog_ts2"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_12"
                android:gravity="center"
                android:fontFamily="@string/PingFang_SC_Medium"
                android:textStyle="bold"
                android:textColor="@color/needcar_txt_color4"
                />

            <View
                android:id="@+id/view"
                style="@style/view_top_bottom10"
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/txt_right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:text="@string/dialog_ts3"
                android:fontFamily="@string/PingFang_SC_Medium"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_12"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/dialog_color"
                />
        </LinearLayout>
</LinearLayout>