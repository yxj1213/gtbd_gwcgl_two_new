<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <View
        style="@style/view_top_bottom10"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/address_book_txt5"
            android:fontFamily="@string/PingFangSC_Regular"
            android:button="@drawable/rb"
            android:textColor="@color/needcar_txt_color2"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_14"
            android:paddingLeft="@dimen/dp_6"
            android:textSize="@dimen/sp_12"/>
        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_edit"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_del"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_13"
            />
        <ImageView
            android:id="@+id/img_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_refuse"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_13"/>
    </RelativeLayout>
</LinearLayout>